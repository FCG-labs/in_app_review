{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES2015"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "baseUrl": ".", // 필수
    "paths": {
      "react-native": ["node_modules/react-native"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "include": [
    "src"
  ]
}
